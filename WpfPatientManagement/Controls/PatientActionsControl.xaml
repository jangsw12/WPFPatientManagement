<UserControl x:Class="WpfPatientManagement.Controls.PatientActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfPatientManagement.Controls"
             xmlns:controls="clr-namespace:WpfLib.Controls;assembly=WpfLib"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="320"
             Background="{StaticResource ColorLightGray}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--CURD Commands-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="조회"
                    Command="{Binding SelectCommand}"/>
            <Button Grid.Column="1"
                    Content="등록"
                    Command="{Binding InsertCommand}"/>
            <Button Grid.Column="2"
                    Content="갱신"
                    Command="{Binding UpdateCommand}"/>
            <Button Grid.Column="3"
                    Content="삭제"
                    Command="{Binding DeleteCommand}"/>
        </Grid>
        
        <!--Patient Details-->
        <Border Grid.Row="1"
                Background="AliceBlue"
                BorderBrush="Black"
                BorderThickness="1"
                DataContext="{Binding SelectedPatient, Mode=TwoWay}">
            <StackPanel Margin="10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="이름"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding Name, Mode=TwoWay}"/>
                </Grid>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="생년월일"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding BirthDate, Mode=TwoWay}"/>
                </Grid>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="성별"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding Gender, Mode=TwoWay}"/>
                </Grid>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="전화번호"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding PhoneNumber, Mode=TwoWay}"/>
                </Grid>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="주소"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding Address, Mode=TwoWay}"/>
                </Grid>

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="이메일"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding Email, Mode=TwoWay}"/>
                </Grid>
            </StackPanel>
        </Border>

        <!--To TreatmentView Move-->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>    
            </Grid.RowDefinitions>

            <controls:TextBoxControl Grid.Row="0"
                                     Background="White"
                                     WaterMarkText="환자 정보 입력"
                                     BorderBrush="Black"
                                     WaterMarkTextColor="{StaticResource ColorDarkBlue}"
                                     Text="{Binding NurseNote, Mode=TwoWay}"/>

            <Button Grid.Row="1"
                    Content="접수"
                    Background="{StaticResource ColorMintGreen}"
                    Command="{Binding AdmitPatientCommand}"/>
        </Grid>
    </Grid>
</UserControl>
